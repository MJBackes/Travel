@model TravelSite.Models.Itinerary

@{
    ViewBag.Title = "Itinerary";
}

<h2>Itinerary for @Html.DisplayFor(model => model.City)</h2>
<hr />
<div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.City)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.City)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.StartDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.StartDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.EndDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.EndDate)
        </dd>

    </dl>
</div>
<table class="table-striped">
    <tr>
        <th>
            Name
        </th>
        <th>
            Address
        </th>
        <th>
            Phone
        </th>
    </tr>
    @foreach(TravelSite.Models.ItineraryActivity activity in ViewBag.Activities)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => activity.Activity.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => activity.Activity.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => activity.Activity.Phone)
            </td>
        </tr>
    }
</table>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
