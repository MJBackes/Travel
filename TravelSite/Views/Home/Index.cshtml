@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>ASP.NET</h1>
    <p class="lead">ASP.NET is a free web framework for building great Web sites and Web applications using HTML, CSS and JavaScript.</p>
    <p><a href="https://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>

<div class="row">
    <div class="col-md-4">
        <h2>Edit My Interests</h2>
        <p>
            Change your interests and see different sites on your trip!
        </p>
        <p>
            <div>
                 @Html.ActionLink("Edit Interests", "EditInterests", null, new { @class = "btn btn-default" })
            </div>
        </p>
    </div>
    <div class="col-md-4">
        <h2>Itinerary</h2>
        <p>Start your trip by finding a hotel!</p>
        <p>
            <div>
                @Html.ActionLink("Find Hotel", "FindHotel", "Itinerary", "FindHotel", new { @class = "btn btn-default" })
            </div>
        </p>
    </div>
    <div class="col-md-4">
        <h2>Edit My Info</h2>
        <p>Change your account information here: First Name &A Last Name!</p>
        <p>
            <div>
                @Html.ActionLink("Edit My Info", "Edit", null, new { @class = "btn btn-default" })
            </div>
        </p>
    </div>
</div>